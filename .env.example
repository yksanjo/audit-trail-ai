# Audit Trail AI - Environment Configuration

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
APP_NAME="Audit Trail AI"
APP_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://audit:audit@localhost:5432/audit_trail
# For Docker:
# DATABASE_URL=postgresql://audit:audit@postgres:5432/audit_trail

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# =============================================================================
# Blockchain Configuration (Optional)
# =============================================================================
# Set to true to enable blockchain anchoring
BLOCKCHAIN_ENABLED=false

# Ethereum RPC URL (Infura, Alchemy, or local node)
ETHEREUM_RPC_URL=http://localhost:8545

# Contract address for anchoring
ANCHOR_CONTRACT_ADDRESS=0x...

# Private key for anchoring transactions (keep secure!)
ANCHOR_PRIVATE_KEY=0x...

# Chain ID (1=mainnet, 5=goerli, 1337=local)
CHAIN_ID=1337

# =============================================================================
# Encryption Settings
# =============================================================================
# Enable encryption for sensitive data
ENABLE_ENCRYPTION=true

# Encryption key (32 bytes, base64 encoded)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# GDPR/Compliance Settings
# =============================================================================
# Days to retain tombstone records after GDPR deletion
GDPR_DELETION_RETENTION_DAYS=90

# Enable cryptographic tombstones for deletions
ENABLE_GDPR_TOMBSTONES=true

# General retention period (days) - 7 years default
RETENTION_DAYS=2555

# =============================================================================
# Audit Export Settings
# =============================================================================
# Default export format
EXPORT_FORMAT=json

# Maximum rows per export
MAX_EXPORT_ROWS=100000

# Sign exports with HMAC
SIGNED_EXPORTS=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# =============================================================================
# Frontend Settings
# =============================================================================
VITE_API_URL=http://localhost:8000/api/v1
